@model CompanyManagement.Common.ViewModels.CompanyViewModel
@{
    ViewBag.Title = "Create";
}

<div class="container">
    <div class="row">
        <div class="col-md-4">
            <div class="form_main">
                <h4 class="heading"><strong>Create </strong> Company <span></span></h4>

                @using (Html.BeginForm("Create", "Company", FormMethod.Post))
                {
                    <div class="form-group">
                        @Html.LabelFor(model => model.Name, "Name", htmlAttributes: new { @class = "control-label col-md-4" })
                        @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.Address, "Address", htmlAttributes: new { @class = "control-label col-md-4" })
                        @Html.EditorFor(model => model.Address, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Address, "", new { @class = "text-danger" })
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.Info, "Info", htmlAttributes: new { @class = "control-label col-md-4" })
                        @Html.TextAreaFor(model => model.Info, new { style="width:280px ; height:200px;"})
                        @Html.ValidationMessageFor(model => model.Info, "", new { @class = "text-danger" })
                    </div>
                    <input type="submit" class=" btn btn-success"style="width: 140px" value="Create" />
                    <input type="button" class="btn btn-danger" value="Cancel"style="width: 140px" onclick="location.href='@Url.Action("Index","Company")'" />
                }
            </div>
        </div>
    </div>
</div>